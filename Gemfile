gem 'execjs'
gem 'therubyracer'

# localhost以外からもエラー時にコンソールが打てる
# rails s TRUSTED_IP=xxx.xxx.xxx.xxx
group :development do
  gem "better_errors"
end

# 論理削除に置き換え
gem 'rails4_acts_as_paranoid'

# steamのgemらしい?
gem 'steam-condenser', '>=1.3.8'

# mumble用ice
gem "ice", "~>0.5.1"

# テンプレートエンジンを haml に変更
